<h2 style="text-align: center">Keskustelupalsta</h2>
<div id="newchat">
    {{#if user}}
        <input id="chatTitle" type="text" placeholder="Kirjoita kysymys aloittaaksesi keskustelun" name="chat" required>
        <button onclick="makeQueryForSendChat();">Lähetä</button>
    {{/if}}
    <ul id="chat"></ul>
</div>

<div>
    <div id="chatcontents">
        <h2 id="chatheader">Tähän klikatun keskustelun otsikko tietokannasta</h2>
        {{#if user}}
            <input id="answer" type="text" placeholder="Kirjoita vastaus (max 500 merkkiä)" required>
            <button id="sendbutton">Lähetä vastaus</button>
        {{/if}}
        <div id="answers"></div>
    </div>
</div>

<div id="modal" class="modal">
    <div id="modal-content">
        <span class="close">x</span>
        <h2 id="header"></h2>
        <p id="rating"></p>
        <div id="container"></div>
        <h2>Arvostelujen keskiarvot:</h2>
        <div class="starcontainer">
            <p>Kunto</p>
            <p class="center" id="averageshape"></p>
            <img class="star" src="img/star.jpg">
        </div>
        <div class="starcontainer">
            <p>Viihtyvyys</p>
            <p class="center" id="averagecomfort"></p>
            <img class="star" src="img/star.jpg">
        </div>
        <div class="starcontainer">
            <p>Kokonaisarvosana</p>
            <p class="center" id="averagegrade"></p>
            <img class="star" src="img/star.jpg">
        </div>
    </div>
</div>

<div id="modal2" class="modal2">
    <div class="modal-content2">
        <span class="close2">x</span>
        <h2 style="display: inline-block">Arvostelu kohteeseen: </h2>
        <h2 style="display: inline-block" id="apartmentaddress"></h2>
        <hr>
        <p style="opacity: 0;" id="idvalue"></p>
        <h3></h3>
        <form>
            <p id="idvalue"></p>
            <fieldset>
                <legend>Kunto</legend>
                <select id="shape">
                    <option value="Erinomainen">Erinomainen</option>
                    <option value="Kiitettävä">Kiitettävä</option>
                    <option value="Hyvä">Hyvä</option>
                    <option value="Tyydyttävä">Tyydyttävä</option>
                    <option value="Välttävä">Välttävä</option>
                </select>
            </fieldset>
            <fieldset>
                <legend>Viihtyvyys</legend>
                <select id="comfort">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="1">1</option>
                </select>
            </fieldset>
            <fieldset>
                <legend>Kokonaisarvosana</legend>
                <select id="grade">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value=3>3</option>
                    <option value="2">2</option>
                    <option value="1">1</option>
                </select>
            </fieldset>
            <br>
            <fieldset>
                <legend>Vapaa sana</legend>
                <textarea id="free_word" style="width: 60%"
                          placeholder="Kirjoita vapaasti kokemuksia ja mielipiteitä asunnosta" rows="10"></textarea>
            </fieldset>
            <input type="button" onclick="makeQueryForSendForm()" value="Lähetä">
        </form>
    </div>
